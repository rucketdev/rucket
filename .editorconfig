root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.rs]
indent_style = space
indent_size = 4

[*.{yml,yaml,toml,json,md}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
